{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2022",                      // Was: "CommonJS"
    "moduleResolution": "bundler",
    "declaration": true,                     // Was: false
    "composite": true,
    "outDir": "./dist/cjs",
    "rootDir": "./src",
    "emitDeclarationOnly": false,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
